---
layout: feed
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>{{ site.title | default: "Your Blog Title" }}</title>
 <subtitle>{{ site.description | default: "Your blog description" }}</subtitle>
 <link href="{{ site.url }}{{ site.baseurl }}/blog/atom.xml" rel="self"/>
 <link href="{{ site.url }}{{ site.baseurl }}/blog"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>{{ site.url }}{{ site.baseurl }}/blog</id>
 <author>
   <name>{{ site.author.name | default: "Your Name" }}</name>
   {% if site.author.email %}
   <email>{{ site.author.email }}</email>
   {% endif %}
 </author>

 {% for post in site.posts limit:20 %}
 <entry>
   <title>{{ post.title | xml_escape }}</title>
   <link href="{{ site.url }}{{ site.baseurl }}{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>{{ site.url }}{{ site.baseurl }}{{ post.id }}</id>
   <author>
      <name>{{ post.author | default: site.author.name | xml_escape }}</name>
   </author>
   {% if post.categories %}
   <category term="{{ post.categories | join: ', ' | xml_escape }}" />
   {% endif %}
   <content type="html">{{ post.content | xml_escape }}</content>
   <summary type="html">{{ post.excerpt | strip_html | truncatewords: 50 | xml_escape }}</summary>
 </entry>
 {% endfor %}
 
</feed>
